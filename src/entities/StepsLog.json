{
    "name": "StepsLog",
    "type": "object",
    "properties": {
      "steps_count": {
        "type": "number",
        "description": "\u05de\u05e1\u05e4\u05e8 \u05e6\u05e2\u05d3\u05d9\u05dd"
      },
      "log_date": {
        "type": "string",
        "format": "date",
        "description": "\u05ea\u05d0\u05e8\u05d9\u05da \u05e8\u05d9\u05e9\u05d5\u05dd \u05d4\u05e6\u05e2\u05d3\u05d9\u05dd"
      },
      "distance_km": {
        "type": "number",
        "description": "\u05de\u05e8\u05d7\u05e7 \u05d1\u05e7\u05d9\u05dc\u05d5\u05de\u05d8\u05e8\u05d9\u05dd"
      },
      "calories_burned": {
        "type": "number",
        "description": "\u05e7\u05dc\u05d5\u05e8\u05d9\u05d5\u05ea \u05e9\u05e0\u05e9\u05e8\u05e4\u05d5 \u05de\u05d4\u05d4\u05dc\u05d9\u05db\u05d4"
      }
    },
    "required": [
      "steps_count",
      "log_date"
    ],
    "rls": {
      "read": {
        "$or": [
          {
            "created_by": "{{user.email}}"
          },
          {
            "user_condition": {
              "role": "admin"
            }
          }
        ]
      },
      "write": {
        "$or": [
          {
            "created_by": "{{user.email}}"
          },
          {
            "user_condition": {
              "role": "admin"
            }
          }
        ]
      }
    }
  }