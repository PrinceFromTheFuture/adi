{
    "name": "Workout",
    "type": "object",
    "properties": {
      "workout_name": {
        "type": "string",
        "description": "\u05e9\u05dd \u05ea\u05d1\u05e0\u05d9\u05ea \u05d4\u05d0\u05d9\u05de\u05d5\u05df"
      },
      "workout_type": {
        "type": "string",
        "enum": [
          "\u05db\u05d5\u05d7",
          "\u05d0\u05d9\u05e8\u05d5\u05d1\u05d9",
          "\u05d2\u05de\u05d9\u05e9\u05d5\u05ea",
          "\u05de\u05e9\u05d5\u05dc\u05d1"
        ],
        "description": "\u05e1\u05d5\u05d2 \u05d4\u05d0\u05d9\u05de\u05d5\u05df"
      },
      "duration_minutes": {
        "type": "number",
        "description": "\u05de\u05e9\u05da \u05d4\u05d0\u05d9\u05de\u05d5\u05df \u05d4\u05de\u05e9\u05d5\u05e2\u05e8 \u05d1\u05d3\u05e7\u05d5\u05ea"
      },
      "exercises": {
        "type": "array",
        "description": "\u05e8\u05e9\u05d9\u05de\u05ea \u05ea\u05e8\u05d2\u05d9\u05dc\u05d9\u05dd \u05d1\u05d0\u05d9\u05de\u05d5\u05df",
        "items": {
          "type": "object",
          "properties": {
            "exercise_name": {
              "type": "string",
              "description": "\u05e9\u05dd \u05d4\u05ea\u05e8\u05d2\u05d9\u05dc"
            },
            "sets": {
              "type": "number",
              "description": "\u05de\u05e1\u05e4\u05e8 \u05e1\u05d8\u05d9\u05dd"
            },
            "reps": {
              "type": "number",
              "description": "\u05d7\u05d6\u05e8\u05d5\u05ea \u05dc\u05e1\u05d8"
            },
            "weight": {
              "type": "number",
              "description": "\u05de\u05e9\u05e7\u05dc \u05d1\u05e7\"\u05d2"
            },
            "rest_time": {
              "type": "string",
              "description": "\u05d6\u05de\u05df \u05de\u05e0\u05d5\u05d7\u05d4 \u05d1\u05d9\u05df \u05e1\u05d8\u05d9\u05dd"
            },
            "target_muscles": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "\u05e9\u05e8\u05d9\u05e8\u05d9 \u05d4\u05d9\u05e2\u05d3"
            },
            "image_url": {
              "type": "string",
              "description": "\u05e7\u05d9\u05e9\u05d5\u05e8 \u05dc\u05ea\u05de\u05d5\u05e0\u05d4 \u05e9\u05dc \u05d4\u05ea\u05e8\u05d2\u05d9\u05dc"
            }
          }
        }
      },
      "intensity": {
        "type": "string",
        "enum": [
          "\u05e0\u05de\u05d5\u05db\u05d4",
          "\u05d1\u05d9\u05e0\u05d5\u05e0\u05d9\u05ea",
          "\u05d2\u05d1\u05d5\u05d4\u05d4"
        ],
        "description": "\u05e8\u05de\u05ea \u05e2\u05d5\u05e6\u05de\u05ea \u05d4\u05d0\u05d9\u05de\u05d5\u05df"
      },
      "notes": {
        "type": "string",
        "description": "\u05d4\u05e2\u05e8\u05d5\u05ea \u05e2\u05dc \u05d4\u05d0\u05d9\u05de\u05d5\u05df"
      },
      "is_active": {
        "type": "boolean",
        "default": false,
        "description": "\u05d4\u05d0\u05dd \u05d4\u05d0\u05d9\u05de\u05d5\u05df \u05d1\u05de\u05e6\u05d1 \u05d1\u05d9\u05e6\u05d5\u05e2 \u05db\u05e8\u05d2\u05e2"
      },
      "last_performed": {
        "type": "string",
        "format": "date",
        "description": "\u05ea\u05d0\u05e8\u05d9\u05da \u05d1\u05d9\u05e6\u05d5\u05e2 \u05d0\u05d7\u05e8\u05d5\u05df"
      }
    },
    "required": [
      "workout_name"
    ],
    "rls": {
      "read": {
        "$or": [
          {
            "created_by": "{{user.email}}"
          },
          {
            "user_condition": {
              "role": "admin"
            }
          }
        ]
      },
      "write": {
        "$or": [
          {
            "created_by": "{{user.email}}"
          },
          {
            "user_condition": {
              "role": "admin"
            }
          }
        ]
      }
    }
  }